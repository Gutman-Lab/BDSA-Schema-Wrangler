{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "BDSA Schema",
    "description": "JSON Schema for the BDSA Project.",
    "type": "object",
    "required": [
        "bdsaID",
        "stainID",
        "regionIDs"
    ],
    "properties": {
        "bdsaID": {
            "type": "string",
            "title": "BDSA ID",
            "pattern": "^BDSA\\d+\\.\\d+$",
            "description": "Unique BDSA case identifier (example: \"BDSA1.33\")"
        },
        "stainID": {
            "type": "object",
            "title": "Stain ID",
            "description": "Stain used on tissue section, with potentially additional information.",
            "properties": {
                "TDP-43": {
                    "type": "object",
                    "title": "TDP-43",
                    "properties": {
                        "phospho-specific": {
                            "type": "string",
                            "title": "Phospho-specific",
                            "enum": [
                                "yes", "no"
                            ]
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "aSyn": {
                    "type": "object",
                    "title": "Alpha Synuclein",
                    "properties": {
                        "phospho-specific": {
                            "type": "string",
                            "title": "Phospho-specific",
                            "enum": [
                                "yes", "no"
                            ]
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "HE": {
                    "type": "object",
                    "title": "HE",
                    "properties": {
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "Silver": {
                    "type": "object",
                    "title": "Silver",
                    "properties": {
                        "technique": {
                            "type": "string",
                            "title": "Silver Stain",
                            "enum": [
                                "Bielschowsky",
                                "Gallyas",
                                "Campbell-Switzer"
                            ]
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "Thioflavin": {
                    "type": "object",
                    "title": "Thioflavin"
                },
                "Tau": {
                    "type": "object",
                    "title": "Tau",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "AT8",
                                "PHF1",
                                "CP13",
                                "Total Tau",
                                "RD3",
                                "RD4"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                },
                "aBeta": {
                    "type": "object",
                    "title": "aBeta",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "4G8",
                                "6E10"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                }
            },
            "minProperties": 1,
            "maxProperties": 1
        },
        "regionIDs": {
            "type": "object",
            "title": "Region Information",
            "required": [
                "regions"
            ],
            "properties": {
                "regions": {
                    "type": "object",
                    "title": "Regions",
                    "minItems": 1,
                    "additionalProperties": false,
                    "properties": {
                        "Olfactory Bulb": {
                            "type": "array",
                            "title": "Olfactory Bulb",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Bulb",
                                    "Tract"
                                ]
                            }
                        },
                        "Parietal Lobe": {
                            "type": "array",
                            "title": "Parietal Lobe",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Super",
                                    "Middle",
                                    "Inferior",
                                    "Angular gyrus",
                                    "Supramarginal gyrus"
                                ]
                            }
                        },
                        "Temporal Pole": {
                            "type": "array",
                            "title": "Temporal Pole",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        },
                        "Frontal Lobe": {
                            "type": "array",
                            "title": "Frontal Lobe",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Superior",
                                    "Middle",
                                    "Inferior"
                                ]
                            }
                        },
                        "Temporal Lobe": {
                            "type": "array",
                            "title": "Temporal Lobe",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Superior",
                                    "Middle",
                                    "Inferior"
                                ]
                            }
                        },
                        "Hippocampus": {
                            "type": "array",
                            "title": "Hippocampus",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "CA1-4 with dentate gyrus",
                                    "Parahippocampal gyrus",
                                    "Tail of caudate",
                                    "Lateral geniculate nucleus",
                                    "Occipital temporal gyrus"
                                ]
                            }
                        },
                        "Anterior Cingulate": {
                            "type": "array",
                            "title": "Anterior Cingulate",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Corpus callosum",
                                    "Superior frontal"
                                ]
                            }
                        },
                        "Posterior Cingulate": {
                            "type": "array",
                            "title": "Anterior Cingulate",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Corpus callosum",
                                    "Superior frontal"
                                ]
                            }
                        },
                        "Amygdala": {
                            "type": "array",
                            "title": "Amygdala",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Entorhinal cortex"
                                ]
                            }
                        },
                        "Thalamus": {
                            "type": "array",
                            "title": "Thalamus",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Mammillary body",
                                    "Subthalamic nucleus",
                                    "Mammilo-thalmaic tract",
                                    "Anterior nucleus of thalamus",
                                    "Pulvinar"
                                ]
                            }
                        },
                        "White Matter": {
                            "type": "array",
                            "title": "White Matter",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Frontal",
                                    "Parietal",
                                    "Temporal",
                                    "Occipital"
                                ]
                            }
                        }, 
                        "Midbrain": {
                            "type": "array",
                            "title": "Midbrain",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "3rd cranial nerve",
                                    "Substantia nigra",
                                    "Red nucleus",
                                    "Superior colliculus"
                                ]
                            }
                        },
                        "Pons": {
                            "type": "array",
                            "title": "Pons",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Superior cerebellar peduncle",
                                    "Inferior colliculus",
                                    "Locus coeruleus",
                                    "Pontine base / fibers"
                                ]
                            }
                        },
                        "Medulla": {
                            "type": "array",
                            "title": "Medulla",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Dorsal motor nucleus of vagus",
                                    "Hypoglossal nucleus",
                                    "Inferior olive",
                                    "Medullary velum",
                                    "Pyramid"
                                ]
                            }
                        },
                        "Cerebellum": {
                            "type": "array",
                            "title": "Cerebellum",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "Dentate",
                                    "Vermis",
                                    "Cortex"
                                ]
                            }
                        },
                        "Basal Ganglia": {
                            "type": "array",
                            "title": "Basal Ganglia",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        },
                        "Occipital Lobe": {
                            "type": "array",
                            "title": "Occipital Lobe",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        },
                        "Primary Motor Cortex": {
                            "type": "array",
                            "title": "Primary Motor Cortex",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        },
                        "Insula": {
                            "type": "array",
                            "title": "Insula",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        },
                        "Frontal Pole": {
                            "type": "array",
                            "title": "Frontal Pole",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        },
                        "Spinal Cord": {
                            "type": "array",
                            "title": "Spinal Cord",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        },
                        "Hypothalamus": {
                            "type": "array",
                            "title": "Hypothalamus",
                            "items": {
                                "type": "string"
                            },
                            "maxItems": 0
                        }
                    }
                },
                "hemisphere": {
                    "type": "string",
                    "title": "Hemisphere",
                    "enum": [
                        "left",
                        "right"
                    ]
                },
                "sliceOrientation": {
                    "title": "Slice Orientation",
                    "type": "string",
                    "enum": [
                        "axial",
                        "coronal",
                        "sagittal"
                    ]
                },
                "damage": {
                    "type": "array",
                    "title": "Damage",
                    "description": "Specifies tissue damage in this region and the cause of it.",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Infarct",
                            "Lacune",
                            "Microinfarct",
                            "CTE",
                            "TBI"
                        ]
                    }
                }
            }
        }
    }
}