{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "BDSA Schema",
    "description": "JSON Schema for the BDSA Project.",
    "type": "object",
    "required": [
        "bdsaID",
        "stainID",
        "regionIDs"
    ],
    "properties": {
        "bdsaID": {
            "type": "string",
            "title": "BDSA ID",
            "pattern": "^BDSA\\d+\\.\\d+$",
            "description": "Unique BDSA case identifier (example: \"BDSA1.33\")"
        },
        "stainID": {
            "type": "object",
            "title": "Stain ID",
            "description": "Stain used on tissue section, with potentially additional information.",
            "properties": {
                "TDP-43": {
                    "type": "object",
                    "title": "TDP-43",
                    "properties": {
                        "phospho-specific": {
                            "type": "string",
                            "title": "Phospho-specific",
                            "enum": [
                                "yes", "no"
                            ]
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "aSyn": {
                    "type": "object",
                    "title": "Alpha Synuclein",
                    "properties": {
                        "phospho-specific": {
                            "type": "string",
                            "title": "Phospho-specific",
                            "enum": [
                                "yes", "no"
                            ]
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "HE": {
                    "type": "object",
                    "title": "HE",
                    "properties": {
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "Silver": {
                    "type": "object",
                    "title": "Silver",
                    "properties": {
                        "technique": {
                            "type": "string",
                            "title": "Silver Stain",
                            "enum": [
                                "Bielschowsky",
                                "Gallyas",
                                "Campbell-Switzer"
                            ]
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "pattern": "^\\w+$"
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        }
                    }
                },
                "Thioflavin": {
                    "type": "object",
                    "title": "Thioflavin"
                },
                "Tau": {
                    "type": "object",
                    "title": "Tau",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "AT8",
                                "PHF1",
                                "CP13",
                                "Total Tau",
                                "RD3",
                                "RD4"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                },
                "aBeta": {
                    "type": "object",
                    "title": "aBeta",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "4G8",
                                "6E10"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                }
            },
            "minProperties": 1,
            "maxProperties": 1
        },
        "regionIDs": {
            "type": "object",
            "title": "Region Information",
            "required": [
                "regions"
            ],
            "properties": {
                "regions": {
                    "type": "array",
                    "title": "Regions",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "enum": [
                            "Medulla",
                            "Pons",
                            "Midbrain",
                            "Thalamus",
                            "Basal Ganglia",
                            "Cerebellum",
                            "Hippocampus",
                            "Amygdala",
                            "Anterior Cingulate",
                            "Frontal Lobe",
                            "Parietal Lobe",
                            "Occipital Lobe",
                            "Temporal Lobe",
                            "Olfactory Bulb",
                            "White Matter",
                            "Primary Motor Cortex",
                            "Insula",
                            "Frontal Pole",
                            "Temporal Pole",
                            "Spinal Cord",
                            "Posterior Cingulate",
                            "Hypothalamus"
                        ]
                    }
                },
                "hemisphere": {
                    "type": "string",
                    "title": "Hemisphere",
                    "enum": [
                        "left",
                        "right"
                    ]
                },
                "sliceOrientation": {
                    "title": "Slice Orientation",
                    "type": "string",
                    "enum": [
                        "axial",
                        "coronal",
                        "sagittal"
                    ]
                },
                "pathology": {
                    "type": "array",
                    "title": "Pathology",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Infarct",
                            "Lacune",
                            "Microinfarct",
                            "CTE",
                            "TBI"
                        ]
                    }
                }
            }
        }
    }
}