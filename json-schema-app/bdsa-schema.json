{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "BDSA Schema",
    "description": "JSON Schema for the BDSA Project.",
    "type": "object",
    "required": [
        "bdsaID",
        "stainID",
        "regionID"
    ],
    "properties": {
        "bdsaID": {
            "type": "string",
            "title": "BDSA ID",
            "pattern": "^BDSA\\d+\\.\\d+$"
        },
        "stainID": {
            "type": "object",
            "title": "Stain ID",
            "properties": {
                "HE": {
                    "type": "object",
                    "title": "HE"
                },
                "Silver": {
                    "type": "object",
                    "title": "Silver"
                },
                "Thioflavin": {
                    "type": "object",
                    "title": "Thioflavin"
                },
                "alphaSynuclein": {
                    "type": "object",
                    "title": "alphaSynuclein",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "Syn303",
                                "Syn211",
                                "Syn506"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                },
                "Tau": {
                    "type": "object",
                    "title": "Tau",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "AT8",
                                "PHF1",
                                "CP13",
                                "Total Tau",
                                "RD3",
                                "RD4"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                },
                "aBeta": {
                    "type": "object",
                    "title": "aBeta",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "4G8",
                                "6E10"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                },
                "pTDP": {
                    "type": "object",
                    "title": "pTDP",
                    "properties": {
                        "antibody": {
                            "type": "string",
                            "title": "Antibody",
                            "enum": [
                                "pS409/410",
                                "pS403/404"
                            ]
                        },
                        "vendor": {
                            "type": "string",
                            "title": "Vendor",
                            "pattern": "^\\w+$"
                        },
                        "dilution": {
                            "type": "string",
                            "title": "Dilution",
                            "_comment": "Mapped to NCI CDE 'Laboratory Procedure Antibody Dilution Ratio Text' (CDE ID 2189728)",
                            "pattern": "^\\d+:\\d+$"
                        }
                    }
                }
            },
            "minProperties": 1,
            "additionalProperties": false
        },
        "regionIDs": {
            "type": "array",
            "title": "Region IDs",
            "items": {
                "type": "object",
                "properties": {
                    "region": {
                        "type": "string",
                        "enum": [
                            "Midbrain",
                            "Visual cortex",
                            "Amygdala",
                            "Striatum",
                            "Parietal gyri",
                            "Pons",
                            "Frontal gyri",
                            "Posterior hippocampus",
                            "Anterior cingulate gyrus",
                            "Posterior cingulate gyrus",
                            "Cerebellum",
                            "Temporal lobe",
                            "Medulla",
                            "Thalamus",
                            "Central gyri",
                            "Periventricular white matter",
                            "Anterior hippocampus",
                            "Olfactory bulb",
                            "Temporal pole"
                        ]
                    },
                    "hemisphere": {
                        "type": "string",
                        "enum": [
                            "left",
                            "right"
                        ]
                    },
                    "sliceOrientation": {
                        "type": "string",
                        "enum": [
                            "axial",
                            "coronal",
                            "sagittal"
                        ]
                    }
                },
                "required": [
                    "region",
                    "hemisphere",
                    "sliceOrientation"
                ]
            },
            "minItems": 1
        }
    }
}