{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "caseID",
        "regionName",
        "stainID"
    ],
    "properties": {
        "caseID": {
            "type": "string",
            "default": "",
            "title": "Case ID",
            "pattern": "\\w+"
        },
        "blockID": {
            "type": "string",
            "default": "",
            "title": "Block ID"
        },
        "stainID": {
            "type": "string",
            "default": "",
            "title": "The stainID Schema",
            "examples": [
                "Tau"
            ],
            "enum": [
                "pTDP",
                "HE",
                "aBeta",
                "Ubiq",
                "Tau",
                "Biels",
                "Syn",
                "p62",
                "LFB",
                "FUS",
                "TDP-43",
                "GFAP"
            ]
        },
        "regionName": {
            "type": "string",
            "default": "",
            "title": "Region Name",
            "enum": [
                "Midbrain",
                "Visual cortex",
                "Amygdala",
                "Striatum",
                "Parietal gyri",
                "Pons",
                "Frontal gyri",
                "Posterior hippocampus",
                "Anterior cingulate gyrus",
                "Posterior cingulate gyrus",
                "Cerebellum",
                "Temporal lobe",
                "Medulla",
                "Thalamus",
                "Central gyri",
                "Periventricular white matter",
                "Anterior hippocampus",
                "Olfactory bulb",
                "Temporal pole"
            ]
        }
    }
}